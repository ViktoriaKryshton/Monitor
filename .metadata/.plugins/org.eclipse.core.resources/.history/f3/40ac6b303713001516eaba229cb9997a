		<script type="text/javascript">
		
		 function load() {
		        $.ajax({
		            url: 'controller',
		            type: "POST",
		            success: function (json) {
		            	if(json != null)
	            		{
		            		var data = JSON.parse(json);
			               if (data.ramRecords != null) {
			                	
			                  var d1 = [null];
		                      $.plot($("#placeholder"), [d1]);
	                         
	                          for (var i =  0; i < data.ramRecords.length; i += 1)
	                            d1.push([i+1, data.ramRecords[i].available/1024/1024/1024]);
	     
	                          $.plot($("#placeholder"), [
	                            {
	                              data: d1,
	                            lines: { steps: true }
	                         }
	                           ]);	                
	            			}
	            		}
		            },
		            error: function (data) {
		                if (data != null) {
		                    return msg.URL;
		                }
		            }
		        });
		    }
    
</script>


		</head>
